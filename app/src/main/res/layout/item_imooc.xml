<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/id_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/id_item_icon"
        android:layout_below="@+id/id_item_icon"
        android:layout_toRightOf="@+id/id_item_icon"
        android:text="asdasd"

        android:textColor="#2c2c2c"

        />

    <TextView
        android:id="@+id/id_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_item_icon"
        android:layout_below="@+id/id_item_title"
        android:layout_toRightOf="@+id/id_item_icon"
        android:background="@android:color/transparent"

        android:singleLine="true"
        android:text="asdasd"
        android:textColor="#cccccc"

        android:textSize="12sp" />

</RelativeLayout>
